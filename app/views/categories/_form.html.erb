<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
            <%if @category.id%>
             <h5>Edit Category</h5>
            <%else%>
                <h5>Create Category</h5>
                <%end%>
              <!--   <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                   
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div> -->
            </div>
             <div class="ibox-content">
             <%= form_for(@category , :html => {:class => "form-horizontal"}) do |f| %>
             <div class="form-group">
              <% if @category.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

                <ul>
                <% @category.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
             </div>

             <div class="form-group">
              <%= f.label :name,:class => "col-sm-2 control-label" %>
            <div class="col-sm-10"><%= f.text_field :name,:required => true, :class => "form-control" %> </div>
            </div>
             <div class="hr-line-dashed"></div>
            <div class="form-group">
             <%= f.label :description,:class => "col-sm-2 control-label" %>
            <div class="col-sm-10"><%= f.text_field :description,:required => true,:class => "form-control"%></div>
            </div>
             <div class="hr-line-dashed"></div>
            <div class="form-group">
            <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                       <%= f.submit :class => "btn btn-primary" %>
                       &nbsp;&nbsp;<%= link_to 'Back', categories_path, :class=>"btn btn-primary" %>
                    </div>
                
             <% end %>
             </div>
        </div>
    </div>
</div>


