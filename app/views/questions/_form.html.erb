<div class="row">
	<div class="col-lg-12">
		<div class="ibox float-e-margins">
			
			<div class="ibox-content">
				<%= form_for(@question , :html => {:class => "form-horizontal"}) do |f| %>

				<div class="form-group">

					<% if @question.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

						<ul>
							<% @question.errors.full_messages.each do |message| %>
							<li>
								<%= message %>
							</li>
							<% end %>
						</ul>
					</div>
					<% end %>
				</div>
				
				<div class="form-group">
					<label class="col-sm-3 control-label">Associate with Product</label>
					<div class="col-sm-9">
						<select name="product[]" class="form-control" multiple="multiple">
							<% Product.all.each do |product| %>
								<% if @selected_product_id.present? %>
									<% @selected_product_id.each do |product_que| %>
										<% if product_que === product.id %>
											<option value="<%= product.id %>" selected="selected"><%= product.name %></option>
										<% else %> 
											<option value="<%= product.id %>" ><%= product.name %></option>
										<% end %>
									<% end %>
								<% else %> 
									<option value="<%= product.id %>" ><%= product.name %></option>
								<% end %>
							<% end %>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-3 control-label">Associate with Section</label>
					<div class="col-sm-9">
						<select name="section[]" class="form-control" multiple="multiple">
							<% @sections.each do |s| %>
								<% if @selected_id.present? %>
									<% @selected_id.each do |sec_cat| %>
										<% if sec_cat == s.id %>
											<option value="<%= s.id %>" selected="selected"><%= s.name %></option>
										<% else %> 
											<option value="<%= s.id %>" ><%= s.name %></option>
										<% end %>
									<% end %>
								<% else %> 
									<option value="<%= s.id %>" ><%= s.name %></option>
								<% end %>
							<% end %>
						</select>
					</div>
				</div>
				
				<div class="hr-line-dashed"></div>
				<div class="form-group">
					<%= f.label :question,:class => "col-sm-3 control-label" %>
					<div class="col-sm-9">
						<%= f.text_field :question,:class => "form-control" %>
					</div>
				</div>
				
				<div class="hr-line-dashed"></div>
				<div class="form-group">
					<label class="col-sm-3 control-label">Input Type</label>
					<div class="col-sm-9">
						<select name="question[question_type]" class="form-control">
							<% @type.each do |ty| %>
								<% if ty == @question.question_type %>
									<option value="<%= ty %>" selected="selected"><%= ty %></option>
								<%else%> 
									<option value="<%= ty %>" ><%= ty %></option>
								<%end%>
							<%end%>
						</select>
					</div>
				</div>
				
				<div class="hr-line-dashed"></div>
				<div class="form-group">
					<div class="col-sm-6 col-sm-offset-3">
						<%= f.submit :class => "btn btn-primary" %>
						<%= link_to 'Back', questions_path, :class => "btn btn-default" %>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>