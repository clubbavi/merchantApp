<div class="row">
	<div class="col-lg-12">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
			 <%if @question.id%>
             <h5>Edit Question</h5>
            <%else%>
				<h5>Create Question</h5>
				    <%end%>
				<!-- <div class="ibox-tools">
					<a class="collapse-link"> <i class="fa fa-chevron-up"></i> </a>
					<a class="dropdown-toggle" data-toggle="dropdown" href="#"> <i class="fa fa-wrench"></i> </a>

					<a class="close-link"> <i class="fa fa-times"></i> </a>
				</div> -->
			</div>
			<div class="ibox-content">
				<%= form_for(@question , :html => {:class => "form-horizontal"}) do |f| %>

				<div class="form-group">

					<% if @question.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

						<ul>
							<% @question.errors.full_messages.each do |message| %>
							<li>
								<%= message %>
							</li>
							<% end %>
						</ul>
					</div>
					<% end %>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Section</label>
					<div class="col-sm-10">
						<select name="section[]" class="form-control" multiple="multiple">
							<% @sections.each do |s| %>
							<%if @selected_id%>
							<%@selected_id.each do |sec_cat|%>
							<%if sec_cat == s.id%>
							<option value="<%= s.id %>" selected="selected"><%= s.name %></value>
								<%else%> <option value="<%= s.id %>" ><%= s.name %></value>
								<%end%>
								<%end%>
								<%else%> <option value="<%= s.id %>" ><%= s.name %></value>
								<%end%>
								<%end%>
						</select>
					</div>
				</div>
				<div class="hr-line-dashed"></div>
				<div class="form-group">
					<%= f.label :question,:class => "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= f.text_field :question,:class => "form-control" %>
					</div>
				</div>
				<div class="hr-line-dashed"></div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Input Type</label>
					<div class="col-sm-10">
						<select name="question[question_type]">

							<% @type.each do |ty| %>
							<%if ty == @question.question_type %>
							<option value="<%= ty %>" selected="selected"><%= ty %></value>
								<%else%> <option value="<%= ty %>" ><%= ty %></value>
								<%end%>
								<%end%>
						</select>
					</div>
				</div>
				<div class="hr-line-dashed"></div>
				<div class="form-group">
					<%= f.label :question_value ,:class => "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= f.text_field :question_value ,:class => "form-control"%>
					</div>
				</div>
				<div class="hr-line-dashed"></div>
				<div class="form-group">
					 <div class="col-sm-2"></div>
                    <div class="col-sm-10">
						<%= f.submit :class => "btn btn-primary" %>&nbsp;&nbsp;<%= link_to 'Back', questions_path , :class => "btn btn-primary" %>
					</div>
						
				</div>
			</div>
		</div>
	</div>
	<% end %>

