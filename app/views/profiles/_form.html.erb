                                <div style="margin-top: 50px" class="form-group" id="section_slection">
                                    <div class="col-sm-10"></div>
                                </div>
                               
                                <div class="form-group">
                                    <div class="col-sm-4 col-sm-offset-2">
                                       <%= f.submit :class => "btn btn-primary" %>
                                    </div>
                                </div>

