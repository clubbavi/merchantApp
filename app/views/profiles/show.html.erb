<p id="notice">
	<%= notice %>
</p>

<div class="row">
	<div class="col-lg-12">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h5>Product</h5>
			</div>
			<div class="ibox-content">
				 

				<p>
					<strong>Category:</strong>
					<%if @profile.category_id %><%= Category.find( @profile.category_id).name %> <%end%>
				</p>

				<p>
					<strong>Product:</strong>
					<%if @profile.product_id %> <%= Product.find( @profile.product_id).name %> <%end%>
				</p>

				 
				<div class="table-responsive tableoverflow">
					<table class="table table-striped tablewidth">
						<thead>
							<tr>
								<th>Question</th>
								<th>Answer</th>
								<th>section</th>
							</tr>
						</thead>
						<tbody>

							<% @question_answers.each do |qns_ans| %>
							<tr>
								<td><%= Question.find(qns_ans.question_id).question %></td>
								<td><%= qns_ans.answere %></td>
								<td><%#= Question.find(qns_ans.question_id).section_id %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>

				<div class="hr-line-dashed"></div>
				<div class="form-group">
					<%= link_to 'Edit', edit_profile_path(@profile),:class=>"btn btn-primary"  %>
					&nbsp;&nbsp;<%= link_to 'Back', profiles_path ,:class=>"btn btn-primary" %>
				</div>

			</div>
		</div>
	</div>
</div>