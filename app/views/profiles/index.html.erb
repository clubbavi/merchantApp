<h1>Listing profiles</h1>
<%= link_to 'New category', new_category_path %>
<%= link_to 'New product', new_product_path %>
<%= link_to 'New section', new_section_path %>
<%= link_to 'New question', new_question_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Category</th>
      <th>Product</th>
      <th>Section</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.email %></td>
        <td><%= profile.category_id %></td>
        <td><%= profile.product_id %></td>
        <td><%= profile.section_id %></td>
        <td><%= profile.question_id %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
